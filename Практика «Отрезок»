namespace Geometry;

public class Vector
{
    public double X;
    public double Y;
}

public class Segment
{
    public Vector Begin;
    public Vector End;
}

public class Geometry
{
    public static double GetLength(Vector vector)
    {
        return System.Math.Sqrt(vector.X * vector.X + vector.Y * vector.Y);
    }

    public static Vector Add(Vector v1, Vector v2)
    {
        return new Vector 
        { 
            X = v1.X + v2.X, 
            Y = v1.Y + v2.Y 
        };
    }

    public static double GetLength(Segment segment)
    {
        double dx = segment.End.X - segment.Begin.X;
        double dy = segment.End.Y - segment.Begin.Y;
        return System.Math.Sqrt(dx * dx + dy * dy);
    }

    public static bool IsVectorInSegment(Vector vector, Segment segment)
    {
        double totalLength = GetLength(segment);

        double len1 = GetLength(new Segment { Begin = segment.Begin, End = vector });
        double len2 = GetLength(new Segment { Begin = vector, End = segment.End });

        return System.Math.Abs(totalLength - (len1 + len2)) < 1e-9;
    }
}
